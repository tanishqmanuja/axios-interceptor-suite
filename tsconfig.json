{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"],
			"~utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src"]
}
